<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.solairis.yourcarslife.data.domain">
	<class name="Vehicle" table="vehicle" lazy="false">
		<id name="vehicleId">
			<generator class="native"/>
		</id>
		<many-to-one name="user" class="com.solairis.yourcarslife.data.domain.User" lazy="false" column="userId"/>
<!--		<one-to-one name="user" class="com.solairis.yourcarslife.data.domain.User" lazy="false"/>-->
		<property name="name"/>
		<property name="description"/>
		<property name="notes"/>
		<set name="vehicleFuelLogs" inverse="true" table="vehicleFuelLog" lazy="false" order-by="odometer" where="active=1">
			<key>
				<column name="vehicleId" not-null="true"/>
			</key>
			<one-to-many class="com.solairis.yourcarslife.data.domain.VehicleFuelLog"/>
		</set>
	</class>
</hibernate-mapping>